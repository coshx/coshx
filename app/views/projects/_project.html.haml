.fp_img{:class => "no#{row*3 + i}"}
  %h3= p.title
  %aside= p.description
  =image_tag p.picture_url if p.picture?
  .overlay
    .link-wrapper
      %a.link-to-the-project{:href => p.url}
- if admin_signed_in?
  .admin_bar
    %ul.link-list
      %li= link_to 'Show', p
      %li= link_to 'Edit', edit_project_path(p)
      %li.divider
      %li= link_to 'Destroy', p, :confirm => 'Are you sure?', :method => :delete, :style => "color:red;"
