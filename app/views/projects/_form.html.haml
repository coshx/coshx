= form_for @project do |f|
  -if @project.errors.any?
    #error_explanation
      %h2= "#{pluralize(@project.errors.count, "error")} prohibited this project from being saved:"
      %ul
        - @project.errors.full_messages.each do |msg|
          %li= msg
  = f.text_field :title, :required => true, :placeholder => "Title"
  = f.text_field :permalink, :placeholder => "Permalink title (title with no whitespace)"
  = f.text_field :icon, :required => true, :placeholder => "URL for project icon"
  = f.text_field :background_color, :placeholder => "Hex designation for background color (eg, #FFFFFF) for white"
  = f.text_field :tagline, :placeholder => "Project tagline"
  = f.text_field :url, :placeholder => "Client website"
  = f.text_area :product_description, :placeholder => "Product description"
  = f.text_area :project_description, :placeholder => "Product description"
  = f.text_area :result_description, :placeholder => "Product description"
  = f.submit 'Save Project'
