%li.post-box
  .post-info-wrapper
    %div(style="width:120px;height:120px;background:url(#{Gravatar.new(post.author.email).image_url(:size => 120)});")
    .post-info
      %div
        Coshx Labs
      %div
        = 'by '+post.author.name
  - if preview
    .post-body=preserve post.preview_html.html_safe
  - else
    .post-body=preserve post.body_html.html_safe
    
  = link_to "Read More", blog_post_path(post)
  - if admin_signed_in?
    .post-admin
      = link_to "Edit", edit_post_path(post)
      = link_to("Publish", publish_post_path(post), :method => :put) unless post.published?

