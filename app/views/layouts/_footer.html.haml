%footer.container
  %div.row.footer-content
    %a.footer-gotop-ribbon{:href => '#top', :id => "top-nav"}
    %h2.blogpost Latest blog posts
    -unless last_two_posts[0].nil? && last_two_posts[1].nil?
      #latest-blogs.row
        - last_two_posts.each do |post|
          .six.column.post
            .row
              .three.columns.fourfoot.mobile-one
                %div.post_pic(style="width:74px;height:74px;background:url(#{Gravatar.new(post.author.email).image_url(:size => 74)});border-radius:100px;border: 4px solid white;")
                %span.post-info
                  = (post.author.deleted_at.nil?) ? link_to(post.author.name, post.author.url) : post.author.name
                  %br/
                  = post.posted_on.strftime("%B %e, %Y")
                %div.small-line
              .content.nine.columns.mobile-three
                %h2
                  = link_to post.title, show_post_path(post.permalink_attributes)
                %div
                  = preserve post.preview_html.html_safe
                .links
                  = link_to "Read more", show_post_path(post.permalink_attributes), :class => "read-more"
                  |
                  %a.comments{:href => show_post_path(post.permalink_attributes.merge(:anchor => 'disqus_thread'))}

    .row
      .star-header#footer-tweet
        %h2 Last tweet
        %p#tweet-box
        = link_to "https://www.twitter.com/coshxlabs", :class => "a-button darkblue" do
          Follow Us
      %div{:id => "footer-tweet"}
        %script{:src => "assets/twitter_stream.js", :type => "text/javascript"}
        :javascript
          twitterCallback2 ("#{latest_tweet.user.screen_name}", "#{escape_javascript latest_tweet.text}", "#{latest_tweet.id.to_s}", "#{latest_tweet.created_at.strftime("%b %d, %Y %H:%M")}");

        / %script{:src => "https://api.twitter.com/1/statuses/user_timeline.json?screen_name=#{@twitter_url}&include_rts=true&count=1&callback=twitterCallback2", :type => "text/javascript"}





    %h2.contact-heading
      Shoot us an email at
      = link_to "info@coshx.com", "mailto:info@coshx.com"
