= form_for @quote do |f|
  -if @quote.errors.any?
    #error_explanation
      %h2= "#{pluralize(@quote.errors.count, "error")} prohibited this quote from being saved:"
      %ul
        - @quote.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :text
    = f.text_field :text
  .field
    = f.label :author
    = f.text_field :author
  .field
    = f.label :project_id
    = f.number_field :project_id
  .actions
    = f.submit 'Save'
