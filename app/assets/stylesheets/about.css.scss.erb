  margin-right: auto;
  border-radius: 5px;

  //-webkit-transition: all 0.3s ease-out; /* Safari 3.2+, Chrome */
  -moz-transition: all 0.3s ease-out; /* Firefox 4-15 */
  -o-transition: all 0.3s ease-out; /* Opera 10.5â€“12.00 */
  transition: all 0.3s ease-out; /* Firefox 16+, Opera 12.50+ */

}

.random_quote {

  .graytext {
    line-height: 150%;
  }

  min-height: 150px;
  div {
    margin: 45px auto;
    &:first-child {
      margin-top: 70px !important;
    }
    text-align: center;
  }
}

.about-stats a {
  color: $dark-blue;
}

#folk-slider {
  .content h1 {
    margin-top: -2px;
  }
}

#folk-slider ~ .slider-nav > span {
  top: 35%;
}

.folk_wrap {
position:relative;
}

.twitter_and_github {
  position: absolute;
  right: 0px;
  a {
    float:right;
  }
}

.github {
  margin-left: 20px;
  padding-left: 30px;
  height: 26px;
  padding-top: 5px;
  color: $blue !important;
  background: url(github-small.png) no-repeat;
  right: 0;
  display: block;
  &:hover {
    background-position: 0px -26px;
    color: white !important;
  }
}

.twitter_link {
  padding-left: 33px;
  height: 26px;
  padding-top: 5px;
  color: $blue !important;
  background: url(banner_twitter.png) no-repeat;
  right: 0;
  display: block;
  &:hover {
    background-position: 0px -25px;
    color: white !important;
  }
}
